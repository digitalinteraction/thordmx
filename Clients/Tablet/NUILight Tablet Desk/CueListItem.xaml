<s:SurfaceListBoxItem x:Class="IPS.TabletDesk.CueListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="40" Width="Auto" ClipToBounds="True" Padding="0,0,0,0"
                      xmlns:s="http://schemas.microsoft.com/surface/2008">
    <s:SurfaceListBoxItem.Resources>
        <ResourceDictionary Source="Resources/Icons.xaml" />
    </s:SurfaceListBoxItem.Resources>
    <Grid Margin="5" Height="30">
        <Rectangle Name="image" Width="20" HorizontalAlignment="Right" Visibility="Hidden">
            <Rectangle.Fill>
            <VisualBrush Visual="{StaticResource appbar_equalizer}" Stretch="Uniform" />
            </Rectangle.Fill>
        </Rectangle>
        <Label Name="fade" HorizontalAlignment="Right" Width="25" Margin="0,0,20,0" FontSize="10" HorizontalContentAlignment="Right"></Label>
        <Label Name="n" HorizontalAlignment="Left" Width="150" Margin="0,0,20,0"></Label>
    </Grid>
</s:SurfaceListBoxItem>